@model IEnumerable<ABCIntegration.Branch>

@{
    ViewBag.Title = "GetBranches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetBranches</h2>

<p>
    @Html.ActionLink("Create New", "Create")<span> | </span>
    @Html.ActionLink("Assign User to Branch", "ManageUserBranch")<span></span>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.branch_code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.addy_line1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.addy_line2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.county)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.postcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.manager_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.branch_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.addy_line1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.addy_line2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.county)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.postcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.manager_id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.branch_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.branch_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.branch_id })
        </td>
    </tr>
}

</table>
